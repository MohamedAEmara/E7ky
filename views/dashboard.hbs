<h6>Dashboard</h6>
<h3>Welcom {{name}}</h3>
<p>Here are your stories</p>
{{#if stories}}
{{!-- We'll loop over the stories --}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/{{_id}}"></a>{{title}}</td>
                    <td>{{formatDate createdAt 'DD/MM/YYYY, h:mm:ss a'}}</td>       {{!-- We'll use the helper to format the date --}}
                    <td><span class="dash-status">{{status}}</span></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>You have not created any stories</p>
{{/if}}